package utils

import "time"
import log "github.com/Sirupsen/logrus"

func GetTimestampFromString(tm []byte) time.Time {
	// year
	len := 0
	target := string(tm[:len+4]) + "-"
	len += 4
	// month
	target += string(tm[len:len+2]) + "-"
	len += 2
	// day
	target += string(tm[len:len+2]) + "T"
	len += 2
	//hour
	target += string(tm[len:len+2]) + ":"
	len += 2
	//minute
	target += string(tm[len:len+2]) + ":"
	len += 2
	//sec
	target += string(tm[len:len+2]) + "+00:00"
	len += 2

	t, err := time.Parse(
		time.RFC3339,
		target)
	if err != nil {
		t = time.Now()
		log.Error(err)
	}

	return t
}
